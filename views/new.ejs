<!DOCTYPE html>
<html>
<head>
  <title>Aadi Foundation eCommerce | Add Product</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="site-header">
    <h1>Aadi Foundation eCommerce</h1>
  </header>

  <div class="container">
    <button id="toggleMode">üåì Toggle Dark Mode</button>
    <h1>Add a New Product</h1>

    <form action="/products" method="POST" class="product-form">
      <input type="text" name="name" placeholder="Product Name" required>
      <input type="number" name="price" placeholder="Price (in ‚Çπ)" required>
      <textarea name="description" placeholder="Product Description" required></textarea>
      <button type="submit">Add Product</button>
    </form>

    <a href="/">‚Üê Back to Home</a>
  </div>

  <script>
    const toggleBtn = document.getElementById("toggleMode");
    toggleBtn.addEventListener("click", () => {
      document.body.classList.toggle("dark");
    });
  </script>
</body>
</html>

